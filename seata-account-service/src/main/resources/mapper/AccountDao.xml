<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.seataaccountservice.dao.AccountDao">

    <resultMap type="com.springboot.seataaccountservice.entity.Account" id="AccountMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="total" column="total" jdbcType="NUMERIC"/>
        <result property="used" column="used" jdbcType="NUMERIC"/>
        <result property="residue" column="residue" jdbcType="NUMERIC"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="AccountMap">
        select
        id, user_id, total, used, residue
        from account
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="AccountMap">
        select
        id, user_id, total, used, residue
        from account
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="AccountMap">
        select
        id, user_id, total, used, residue
        from account
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="total != null">
                and total = #{total}
            </if>
            <if test="used != null">
                and used = #{used}
            </if>
            <if test="residue != null">
                and residue = #{residue}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into account(user_id, total, used, residue)
        values (#{userId}, #{total}, #{used}, #{residue})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update account
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="total != null">
                total = #{total},
            </if>
            <if test="used != null">
                used = #{used},
            </if>
            <if test="residue != null">
                residue = #{residue},
            </if>
        </set>
        where user_id = #{userId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from account where id = #{id}
    </delete>

</mapper>
